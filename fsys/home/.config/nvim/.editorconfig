root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*.lua]
indent_style = tab
indent_size = 4
quote_type = double
call_parentheses = always
collapse_simple_statement = never
sort_requires = false
